@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação para apagar o usuário:";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome) ?</h3>
</div>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Usuario" asp-action="Index">Cancelar</a>
    <a class="btn btn-danger" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>
</div>
